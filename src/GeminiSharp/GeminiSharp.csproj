<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>

		<!-- Enable Nullable Reference Types and Implicit Usings -->
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet Package Metadata -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>GeminiSharp</PackageId>
		<Version>0.0.2</Version>
		<Authors>Devi Prakash</Authors>
		<Description>A C# client SDK for Google Gemini API</Description>
		<Summary>A lightweight, easy-to-use C# SDK for interacting with Google Gemini API</Summary>
		<PackageTags>Google Gemini AI SDK MachineLearning</PackageTags>

		<!-- Repository Information -->
		<RepositoryUrl>https://github.com/dprakash2101/GeminiSharp</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<!-- Licensing -->
		<PackageLicenseExpression>MIT</PackageLicenseExpression>

		<!-- Include Source Code in the NuGet Package -->
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<!-- .NET Compatibility -->
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
	</PropertyGroup>

</Project>
